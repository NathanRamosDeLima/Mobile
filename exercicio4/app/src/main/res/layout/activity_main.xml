<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F0F0FF"
    android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Texto"
        android:textSize="16sp"
        android:layout_marginTop="8dp"/>

    <EditText
        android:id="@+id/inputText"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@android:drawable/editbox_background"
        android:gravity="top|start"
        android:padding="8dp"
        android:hint="Digite o texto"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tamanho da letra"
        android:textSize="16sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <SeekBar
            android:id="@+id/seekBarTamanho"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:max="80" />

        <TextView
            android:id="@+id/txtTamanho"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10sp"
            android:paddingStart="8dp"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Estilo"
        android:textSize="16sp" />

    <CheckBox
        android:id="@+id/cbNegrito"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Negrito" />

    <CheckBox
        android:id="@+id/cbItalico"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Itálico" />

    <CheckBox
        android:id="@+id/cbMaiusculas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Maiúsculas"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cor da letra"
        android:textSize="16sp" />

    <RadioGroup
        android:id="@+id/radioGroupCores"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <RadioButton
            android:id="@+id/rbVermelho"
            android:layout_width="109dp"
            android:layout_height="wrap_content"
            android:text="Vermelho" />

        <RadioButton
            android:id="@+id/rbVerde"
            android:layout_width="136dp"
            android:layout_height="wrap_content"
            android:text="Verde" />

        <RadioButton
            android:id="@+id/rbAzul"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:text="Azul" />
    </RadioGroup>

    <Button
        android:id="@+id/btnAplicar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aplicar"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/resultado"
        android:layout_width="match_parent"
        android:layout_height="91dp"
        android:background="#FFFFFF"
        android:elevation="2dp"
        android:padding="8dp"
        android:text="Texto formatado aparecerá aqui"
        android:textSize="16sp" />
</LinearLayout>